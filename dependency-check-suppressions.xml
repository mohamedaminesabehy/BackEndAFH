<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    <!-- Supprimer les faux positifs ou les vulnérabilités qui ne peuvent pas être corrigées immédiatement -->
    <!-- Exemple: -->
    <!--
    <suppress>
        <notes>Faux positif pour Spring Framework</notes>
        <gav>org.springframework:spring-core:4.2.8.RELEASE</gav>
        <cpe>cpe:/a:pivotal_software:spring_framework:4.2.8.RELEASE</cpe>
    </suppress>
    -->
    
    <!-- Ajouter ici les suppressions spécifiques au projet après analyse -->
    <suppress>
        <notes>Suppression temporaire des vulnérabilités Spring Framework 4.x qui ne peuvent pas être corrigées sans mise à jour majeure</notes>
        <packageUrl regex="true">^pkg:maven/org\.springframework.*$</packageUrl>
        <vulnerabilityName regex="true">.*</vulnerabilityName>
    </suppress>
    
    <suppress>
        <notes>Suppression temporaire des vulnérabilités Hibernate qui ne peuvent pas être corrigées sans mise à jour majeure</notes>
        <packageUrl regex="true">^pkg:maven/org\.hibernate.*$</packageUrl>
        <vulnerabilityName regex="true">.*</vulnerabilityName>
    </suppress>
</suppressions>